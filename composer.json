{
  "name": "gzhegow/i18n",
  "type": "library",
  "version": "1.0.0",
  "license": "MIT",

  "authors": [
    {
      "name": "gzhegow",
      "email": "6562680@gmail.com"
    }
  ],

  "minimum-stability": "dev",
  "prefer-stable": true,

  "require": {
    "php": "^7.3|^8.0",

    "ext-bcmath": "*",
    "ext-mbstring": "*",

    "gzhegow/lib": "~1.1.0"
  },

  "autoload": {
    "psr-4": {
      "Gzhegow\\I18n\\": "src/"
    },
    "exclude-from-classmap": [
      "tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Gzhegow\\I18n\\Tests\\": "tests/src/"
    }
  },

  "config": {
    "optimize-autoloader": true,

    "sort-packages": false
  }
}